<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%=homeInfo%></p>

<% posts.forEach(function(item){ %>
    <h2><%=item.title%></h2>
    <% if((item.post).length > 100){ %>
        <p><%=(item.post).substring(0, 101)%> <a href="/posts/<%=item._id%>">Read More...</a></p>
        <%}else{ %>
        <p><%=item.post%></p> 
        <%}%>
<%}) %>


<%- include('partials/footer'); -%>