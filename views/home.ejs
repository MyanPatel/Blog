<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%=homeInfo%></p>

<% posts.forEach(function(item){ %>
    <h2><%=item.title%></h2>
    <% if((item.content).length > 100){ %>
        <p><%=(item.content).substring(0, 101)%> <a href="/posts/<%=item.title%>">Read More...</a></p>
        <%}else{ %>
        <p><%=item.content%></p> 
        <%}%>
<%}) %>


<%- include('partials/footer'); -%>